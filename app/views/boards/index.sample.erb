<h1>Boards</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Startbook</th>
      <th>Startchapter</th>
      <th>Startverse</th>
      <th>Endbook</th>
      <th>Endchapter</th>
      <th>Endverse</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.title %></td>
        <td><%= board.content %></td>
        <td><%= board.startBook %></td>
        <td><%= board.startChapter %></td>
        <td><%= board.startVerse %></td>
        <td><%= board.endBook %></td>
        <td><%= board.endChapter %></td>
        <td><%= board.endVerse %></td>
        <td><%= link_to 'Show', board %></td>
        <td><%= link_to 'Edit', edit_board_path(board) %></td>
        <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

